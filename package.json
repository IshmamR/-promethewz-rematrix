{
  "name": "@promethewz/rematrix",
  "author": "IshmamR <ishmam785@gmail.com> (https://portfolio.ishmams.xyz/)",
  "description": "A lightweight matrix animation component",
  "version": "1.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "module": "dist/rematrix.esm.js",
  "size-limit": [
    {
      "path": "dist/rematrix.cjs.production.min.js",
      "limit": "2 KB"
    },
    {
      "path": "dist/rematrix.esm.js",
      "limit": "4 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.3",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^7.0.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.3"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "doubleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 2 chrome version",
      "last 2 firefox version",
      "last 2 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IshmamR/promethewz-rematrix.git"
  },
  "homepage": "https://github.com/IshmamR/promethewz-rematrix#readme",
  "keywords": [
    "matrix",
    "animation",
    "rematrix",
    "promethewz"
  ],
  "bugs": {
    "url": "https://github.com/IshmamR/promethewz-rematrix/issues",
    "email": "ishmam785@gmail.com"
  }
}